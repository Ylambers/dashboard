{% extends 'admin/index.html.twig' %}


{% block body %}
    <div class="container">
        <div class="row">
            <div class="col-md-6">
                <h1>Item</h1>
                {{ form_start(form) }}
                {{ form_widget(form) }}
                {{ form_end(form) }}
            </div>

            <div class="col-md-6 scroll-container">
                {% for item in data %}
                    <h2>{{ item.category.name }}</h2>
                    <hr />
                    {{ item.Title }} <br />
                    {{ item.shortText }} <br />
                    {{ item.text }} <br />
                    {{ item.link }} <br />
                    {{ item.active }} <br />

                    <a class="btn btn-default" href="/user/item/{{ item.id }}" role="button">Edit</a>
                    <a class="btn btn-danger" href="/user/item/delete/{{ item.id }}" role="button">Delete</a>
                {% endfor %}
            </div>
        </div>
    </div>
{% endblock %}