{% extends 'admin/index.html.twig' %}

{% block content %}
    <div class="container">
        <h1>User Profile</h1>

        <table class="table  table-striped table-hover">
            <thead>
            <tr>
                <th>First name</th>
                <th>Last name</th>
                <th>Date of birth</th>
                <th>Email</th>
                <th>Phone number</th>
                <th>Mobile number</th>
                <th>Address</th>
            </tr>
            </thead>
            <tbody>
                <tr>
                    <td>{{ user.firstName }}</td>
                    <td>{{ user.lastName }}</td>
                    <td>{{ user.dateOfBirth|date("Y:m:d")}}</td>
                    <td>{{ user.email }}</td>
                    <td>{{ user.phoneNumber }}</td>
                    <td>{{ user.mobileNumber }}</td>
                    <td>{{ user.address }}</td>
                </tr>
            </tbody>
        </table>

    </div>


{% endblock %}