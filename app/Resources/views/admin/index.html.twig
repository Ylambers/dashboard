<!DOCTYPE html>
<html>
<head>
    <meta charset="UTF-8" />
    <title>{% block title %}Admin panel{% endblock %}</title>

    {% stylesheets
        'bundles/framework/css/bootstrap.css' filter='cssrewrite'
        'bundles/css/admin/menu.css'
        'bundles/css/admin/index.css'
    %}
    <link rel="stylesheet" href="{{ asset_url }}" />
    {% endstylesheets %}
    {#CDN LIBARAYS#}
        <link href="//cdn.rawgit.com/noelboss/featherlight/1.6.1/release/featherlight.min.css" type="text/css" rel="stylesheet" />
    {#END CDN#}
    <link rel="icon" type="image/x-icon" href="{{ asset('favicon.ico') }}" />
</head>
<body>
{% block menu %}
    <div class="menu">
        <nav id="primary_nav_wrap">
            <ul>
                <li><a href="/">Home</a></li>
                <li><a href="#">Content</a>
                    <ul>
                        <a href="{{ path('category') }}">Category</a>
                        <a href="{{ path('item_create') }}">Item</a>
                        <a href="/user/slider">Slider</a>
                        <a href="{{ path('image_upload') }}">Image upload</a>
                        <a href="{{ path('image_view') }}">Image view</a>
                    </ul>
                </li>

                <li>
                    <a href="#">Users</a>
                    <ul>
                        <a href="/user/fos/register">Create user</a>

                        <a href="/user/fos/show">Show users</a>
                        <a href="{{ path('fos_user_resetting_request') }}">Forgot password</a>
                    </ul>
                </li>
                <li><a href="/user/profile">Profile</a></li>
                <li><a href="/logout">Logout</a></li>

            </ul>
        </nav>
    </div>
{% endblock %}

{% block body %}

{% endblock %}


{% block content %}{% endblock %}
{% block javascripts %}
    {% javascripts
    'bundles/js/jquery-3.1.1.js'
    'bundles/js/admin/index.js'
    %}
    <script src="{{ asset_url }}"></script>
    {% endjavascripts %}

    {#CDN LIBARAYS#}
        <script src="//cdn.rawgit.com/noelboss/featherlight/1.6.1/release/featherlight.min.js" type="text/javascript" charset="utf-8"></script>
    {#END CDN#}
{% endblock %}

<script>
    function callback_tinymce_init(editor) {
        editor.settings.entity_encoding = 'raw';
    }
</script>
{{ tinymce_init({
    theme: {'simple':{'language': app.request.locale, 'height': 300 }},
    toolbar: "insertfile undo redo | styleselect | bold italic | alignleft aligncenter alignright alignjustify | bullist numlist outdent indent | link image",
    autosave_ask_before_unload: false})
}}
</body>
</html>
