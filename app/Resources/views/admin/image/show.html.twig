{% extends 'admin/index.html.twig' %}


{% block body %}

    <h1>Image</h1>

    {% for image in data %}
        <div class="container">
            <div class="row">
                <div class="col-md-3">
                    <h2>{{ image.name }}</h2>
                </div>
                <div class="col-md-3">
                    <p>{{ image.description }}</p>
                </div>
                <div class="col-md-3">
                    <img src="{{ asset('uploads/images/' ~ image.image) }}" width="100px" />
                </div>

                <div class="col-md-3">
                    <a href="/user/image/delete/{{ image.id }}">Delete</a>
                </div>
            </div>
        </div>

    {% endfor %}
{% endblock %}