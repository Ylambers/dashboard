{% extends 'admin/index.html.twig' %}


{% block body %}
    <div class="container">
        <div class="row">
    {% for image in data %}
            <div class="col-md-3">
                <h2>{{ image.name }}</h2>
            </div>
            <div class="col-md-3">
                <p>{{ image.description }}</p>
            </div>
            <div class="col-md-3">
                <img src="{{ asset('uploads/images/' ~ image.image) }}" width="100px" />
            </div>

            <div class="col-md-3">
                <a href="/user/image/delete/{{ image.id }}">Delete</a>
            </div>
        </div>
    {% endfor %}
    </div>

{% endblock %}